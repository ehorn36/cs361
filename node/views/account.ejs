<!-- .ejs file uses HTML + JavaScript -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <script src='app.js'></script>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
        </nav>
    </header>
    <main class="home_about">
        <h2>Account Info</h2>

        <!-- Name: USING EJS TEMPLATE ENGINE WITH EXPRESS.JS > STEP 5: PASSING DATA TO EJS FILES-->
        <!-- Source: https://www.topcoder.com/thrive/articles/using-ejs-template-engine-with-express-js -->
        <h4>Name</h4>
            <div class="white_box">
                <div><%= name %></div>
            </div>
        <h4>Email</h4>
        <div class="white_box">
            <div><%= email %></div>
        </div>
        <h4>Favorite movie</h4>
        <div class="white_box">
            <div><%= movie %></div>
        </div>
        <h4>Release Date</h4>
        <div class="white_box">
            <div><%= releaseDate %></div>
        </div>
        <h4>IMDB Review Score</h4>
        <div class="white_box">
            <div><%= movieReview %></div>
        </div>
        <h4>Summary</h4>
        <div class="white_box">
            <div><%= overview %></div>
        </div>
        <h4>Movie Recommendation</h4>
        <div class="white_box">
            <div><%= movieRec %></div>
        </div>
        <h4>Movie Recommendation Summary</h4>
        <div class="white_box">
            <div><%= RecSum %></div>
        </div>

        <!-- Name: HTML Images -->
        <!-- Source: https://www.w3schools.com/html/html_images.asp -->
        <% if (movieURL) { %>
            <img src="<%= movieURL %>" alt="Movie Image" class="movie-image">
        <% } %>
        <div style="display: flex; gap: 10px;">
            <form action="/home" method="GET">
                <button class="button" type="submit">Go back home</button>
            </form>
            <form action="/update" method="GET">
                <button class="button" type="submit">Update favorite movie</button>
            </form>
        </div>


    </main>
</body>
</html>