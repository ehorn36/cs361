            <form action="/update" method="POST">
                <table>
                    <tr>
                        <td><label for="movie_update">Update:</label></td>
                        <td><input type="text" placeholder="Enter the name of a movie" id="movie" name="movie" required></td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center;">
                            <button class="button" type="submit">Update Movie</button>
                        </td>
                    </tr>
                </table>
            </form>
            <div style="display: flex; gap: 10px;">
                <form action="/home" method="GET">
                    <button class="button" type="submit">Go back home</button>
                </form>
            </div>
    </main>
</body>
</html>